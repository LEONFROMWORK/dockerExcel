#!/bin/bash

# Excel Unified ê°œì„ ëœ ì‹œìŠ¤í…œ ì¢…ë£Œ ìŠ¤í¬ë¦½íŠ¸
# ì•ˆì „í•˜ê³  ì™„ì „í•œ ì¢…ë£Œë¥¼ ë³´ì¥

set -e

# ìƒ‰ìƒ ì •ì˜
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# ë¡œê·¸ í•¨ìˆ˜ë“¤
log_info() {
    echo -e "${BLUE}â„¹ï¸  $1${NC}"
}

log_success() {
    echo -e "${GREEN}âœ… $1${NC}"
}

log_warning() {
    echo -e "${YELLOW}âš ï¸  $1${NC}"
}

log_error() {
    echo -e "${RED}âŒ $1${NC}"
}

log_header() {
    echo -e "${BOLD}${CYAN}ğŸ›‘ $1${NC}"
}

# íŒŒë¼ë¯¸í„° íŒŒì‹±
FORCE=false
KEEP_DOCKER=false
CLEANUP_TEMP=true
TIMEOUT=10

while [[ $# -gt 0 ]]; do
    case $1 in
        --force)
            FORCE=true
            shift
            ;;
        --keep-docker)
            KEEP_DOCKER=true
            shift
            ;;
        --no-cleanup)
            CLEANUP_TEMP=false
            shift
            ;;
        --timeout)
            TIMEOUT="$2"
            shift 2
            ;;
        --help)
            echo "ì‚¬ìš©ë²•: ./stop-all-improved [ì˜µì…˜]"
            echo "ì˜µì…˜:"
            echo "  --force        ê°•ì œ ì¢…ë£Œ (SIGKILL ì‚¬ìš©)"
            echo "  --keep-docker  Docker ì»¨í…Œì´ë„ˆ ìœ ì§€"
            echo "  --no-cleanup   ì„ì‹œ íŒŒì¼ ì •ë¦¬ ì•ˆí•¨"
            echo "  --timeout N    í”„ë¡œì„¸ìŠ¤ ì¢…ë£Œ ëŒ€ê¸° ì‹œê°„ (ê¸°ë³¸: 10ì´ˆ)"
            echo "  --help         ë„ì›€ë§ í‘œì‹œ"
            exit 0
            ;;
        *)
            log_error "ì•Œ ìˆ˜ ì—†ëŠ” ì˜µì…˜: $1"
            exit 1
            ;;
    esac
done

log_header "Excel Unified ì‹œìŠ¤í…œ ì¢…ë£Œ"
echo ""

# ì¢…ë£Œí•  í”„ë¡œì„¸ìŠ¤ ëª©ë¡ ì •ì˜
declare -A PROCESSES=(
    ["Rails"]="rails server|puma"
    ["Vite"]="vite|node.*vite"
    ["Python"]="uvicorn|python.*main:app"
    ["Sidekiq"]="sidekiq"
    ["Tailwind"]="tailwindcss"
)

# í¬íŠ¸ ëª©ë¡ ì •ì˜
declare -A PORTS=(
    ["Rails"]=3000
    ["Python"]=8000
    ["Vite"]=5173
    ["Collabora"]=9980
)

# ì•ˆì „í•œ í”„ë¡œì„¸ìŠ¤ ì¢…ë£Œ í•¨ìˆ˜
safe_kill_process() {
    local process_pattern=$1
    local service_name=$2
    local signal=${3:-TERM}

    # í”„ë¡œì„¸ìŠ¤ ì°¾ê¸°
    local pids=$(pgrep -f "$process_pattern" 2>/dev/null || true)

    if [[ -z "$pids" ]]; then
        return 0
    fi

    # ì‹ í˜¸ ì „ì†¡
    for pid in $pids; do
        if kill -0 "$pid" 2>/dev/null; then
            kill -$signal "$pid" 2>/dev/null || true
            if [[ "$VERBOSE" == true ]]; then
                log_info "$service_name í”„ë¡œì„¸ìŠ¤ ì¢…ë£Œ ì‹ í˜¸ ì „ì†¡ (PID: $pid)"
            fi
        fi
    done

    # SIGTERMì˜ ê²½ìš° í”„ë¡œì„¸ìŠ¤ ì¢…ë£Œ ëŒ€ê¸°
    if [[ "$signal" == "TERM" ]]; then
        local waited=0
        while [[ $waited -lt $TIMEOUT ]]; do
            local remaining_pids=$(pgrep -f "$process_pattern" 2>/dev/null || true)
            if [[ -z "$remaining_pids" ]]; then
                return 0
            fi
            sleep 1
            ((waited++))
        done

        # íƒ€ì„ì•„ì›ƒ í›„ì—ë„ ë‚¨ì•„ìˆìœ¼ë©´ SIGKILL
        log_warning "$service_nameì´ ì •ìƒ ì¢…ë£Œë˜ì§€ ì•Šì•„ ê°•ì œ ì¢…ë£Œí•©ë‹ˆë‹¤."
        safe_kill_process "$process_pattern" "$service_name" "KILL"
    fi
}

# í¬íŠ¸ í•´ì œ í•¨ìˆ˜
release_port() {
    local port=$1
    local service=$2

    if lsof -ti:$port > /dev/null 2>&1; then
        local pid=$(lsof -ti:$port)
        log_warning "$service (í¬íŠ¸ $port) ì‚¬ìš© ì¤‘ì¸ í”„ë¡œì„¸ìŠ¤ ì¢…ë£Œ (PID: $pid)"

        if [[ "$FORCE" == true ]]; then
            kill -9 $pid 2>/dev/null || true
        else
            kill -TERM $pid 2>/dev/null || true
            sleep 2
            if lsof -ti:$port > /dev/null 2>&1; then
                kill -9 $pid 2>/dev/null || true
            fi
        fi
    fi
}

# 1. tmux ì„¸ì…˜ ì¢…ë£Œ
log_info "tmux ì„¸ì…˜ ì¢…ë£Œ ì¤‘..."
if tmux has-session -t excel-unified 2>/dev/null; then
    # ê° ìœˆë„ìš°ì— ì¢…ë£Œ ì‹ í˜¸ ì „ì†¡
    for window in $(tmux list-windows -t excel-unified -F '#{window_name}' 2>/dev/null || true); do
        tmux send-keys -t excel-unified:$window C-c 2>/dev/null || true
    done
    sleep 2

    # ì„¸ì…˜ ì¢…ë£Œ
    tmux kill-session -t excel-unified 2>/dev/null || true
    log_success "tmux ì„¸ì…˜ ì¢…ë£Œë¨"
else
    log_info "tmux ì„¸ì…˜ì´ ì‹¤í–‰ ì¤‘ì´ì§€ ì•ŠìŒ"
fi

# 2. ì• í”Œë¦¬ì¼€ì´ì…˜ í”„ë¡œì„¸ìŠ¤ ì¢…ë£Œ
log_header "ì• í”Œë¦¬ì¼€ì´ì…˜ í”„ë¡œì„¸ìŠ¤ ì¢…ë£Œ"

for service in "${!PROCESSES[@]}"; do
    log_info "$service ì¢…ë£Œ ì¤‘..."

    # í”„ë¡œì„¸ìŠ¤ íŒ¨í„´ì„ |ë¡œ ë¶„ë¦¬í•˜ì—¬ ê°ê° ì²˜ë¦¬
    IFS='|' read -ra patterns <<< "${PROCESSES[$service]}"
    for pattern in "${patterns[@]}"; do
        if [[ "$FORCE" == true ]]; then
            safe_kill_process "$pattern" "$service" "KILL"
        else
            safe_kill_process "$pattern" "$service" "TERM"
        fi
    done

    log_success "$service ì¢…ë£Œë¨"
done

# 3. í¬íŠ¸ ì •ë¦¬
log_header "í¬íŠ¸ ì •ë¦¬"

for service in "${!PORTS[@]}"; do
    release_port "${PORTS[$service]}" "$service"
done

# 4. Docker ì»¨í…Œì´ë„ˆ ì²˜ë¦¬
if [[ "$KEEP_DOCKER" == false ]]; then
    log_header "Docker ì»¨í…Œì´ë„ˆ ì¢…ë£Œ"

    # Collabora ì»¨í…Œì´ë„ˆ ì°¾ê¸°
    local containers=$(docker ps -a --filter "name=collabora" --format "{{.Names}}" 2>/dev/null || true)

    if [[ -n "$containers" ]]; then
        echo "$containers" | while read -r container; do
            log_info "ì»¨í…Œì´ë„ˆ ì¢…ë£Œ: $container"

            # ì •ìƒ ì¢…ë£Œ ì‹œë„
            docker stop -t 10 "$container" 2>/dev/null || true

            if [[ "$FORCE" == true ]]; then
                # ê°•ì œ ëª¨ë“œì—ì„œëŠ” ì»¨í…Œì´ë„ˆ ì‚­ì œ
                docker rm -f "$container" 2>/dev/null || true
                log_success "ì»¨í…Œì´ë„ˆ ì‚­ì œë¨: $container"
            else
                log_success "ì»¨í…Œì´ë„ˆ ì¤‘ì§€ë¨: $container"
            fi
        done
    else
        log_info "ì‹¤í–‰ ì¤‘ì¸ Collabora ì»¨í…Œì´ë„ˆ ì—†ìŒ"
    fi
else
    log_info "Docker ì»¨í…Œì´ë„ˆ ìœ ì§€ (--keep-docker)"
fi

# 5. ì„ì‹œ íŒŒì¼ ì •ë¦¬
if [[ "$CLEANUP_TEMP" == true ]]; then
    log_header "ì„ì‹œ íŒŒì¼ ì •ë¦¬"

    # Rails ê´€ë ¨ ì •ë¦¬
    if [[ -d "/Users/kevin/excel-unified/rails-app" ]]; then
        rm -f /Users/kevin/excel-unified/rails-app/tmp/pids/*.pid 2>/dev/null || true
        rm -rf /Users/kevin/excel-unified/rails-app/tmp/cache/* 2>/dev/null || true
        log_success "Rails ì„ì‹œ íŒŒì¼ ì •ë¦¬ë¨"
    fi

    # Python ê´€ë ¨ ì •ë¦¬
    if [[ -d "/Users/kevin/excel-unified/python-service" ]]; then
        find /Users/kevin/excel-unified/python-service -name "__pycache__" -type d -exec rm -rf {} + 2>/dev/null || true
        find /Users/kevin/excel-unified/python-service -name "*.pyc" -delete 2>/dev/null || true
        rm -rf /Users/kevin/excel-unified/python-service/.pytest_cache 2>/dev/null || true
        log_success "Python ìºì‹œ ì •ë¦¬ë¨"
    fi

    # ì—…ë¡œë“œëœ ì„ì‹œ íŒŒì¼ ì •ë¦¬ (7ì¼ ì´ìƒ ëœ íŒŒì¼)
    if [[ -d "/Users/kevin/excel-unified/rails-app/tmp/uploads" ]]; then
        find /Users/kevin/excel-unified/rails-app/tmp/uploads -type f -mtime +7 -delete 2>/dev/null || true
        log_success "ì˜¤ë˜ëœ ì—…ë¡œë“œ íŒŒì¼ ì •ë¦¬ë¨"
    fi
fi

# 6. ìµœì¢… ìƒíƒœ í™•ì¸
echo ""
log_header "ì¢…ë£Œ ìƒíƒœ í™•ì¸"

# í”„ë¡œì„¸ìŠ¤ í™•ì¸
local all_stopped=true
for service in "${!PROCESSES[@]}"; do
    IFS='|' read -ra patterns <<< "${PROCESSES[$service]}"
    for pattern in "${patterns[@]}"; do
        if pgrep -f "$pattern" > /dev/null 2>&1; then
            echo -e "${RED}âŒ $service í”„ë¡œì„¸ìŠ¤ê°€ ì—¬ì „íˆ ì‹¤í–‰ ì¤‘${NC}"
            all_stopped=false
            break
        fi
    done

    if [[ "$all_stopped" == true ]]; then
        echo -e "${GREEN}âœ… $service í”„ë¡œì„¸ìŠ¤ ì¢…ë£Œë¨${NC}"
    fi
done

# í¬íŠ¸ í™•ì¸
echo ""
log_info "í¬íŠ¸ ìƒíƒœ:"
for service in "${!PORTS[@]}"; do
    local port="${PORTS[$service]}"
    if lsof -ti:$port > /dev/null 2>&1; then
        echo -e "${RED}âŒ $service (í¬íŠ¸ $port ì‚¬ìš© ì¤‘)${NC}"
    else
        echo -e "${GREEN}âœ… $service (í¬íŠ¸ $port í•´ì œë¨)${NC}"
    fi
done

# Docker ìƒíƒœ
if [[ "$KEEP_DOCKER" == false ]]; then
    echo ""
    local running_containers=$(docker ps --filter "name=collabora" --format "{{.Names}}" 2>/dev/null || true)
    if [[ -z "$running_containers" ]]; then
        echo -e "${GREEN}âœ… Collabora Docker ì»¨í…Œì´ë„ˆ ì¢…ë£Œë¨${NC}"
    else
        echo -e "${RED}âŒ Collabora Docker ì»¨í…Œì´ë„ˆ ì‹¤í–‰ ì¤‘: $running_containers${NC}"
    fi
fi

# 7. ì™„ë£Œ ë©”ì‹œì§€
echo ""
log_header "ğŸ‰ Excel Unified ì‹œìŠ¤í…œ ì¢…ë£Œ ì™„ë£Œ!"
echo ""

log_info "ì‹œìŠ¤í…œì„ ë‹¤ì‹œ ì‹œì‘í•˜ë ¤ë©´:"
echo -e "  ${CYAN}./start-all-improved${NC}  # ê°œì„ ëœ ìŠ¤í¬ë¦½íŠ¸"
echo -e "  ${CYAN}./start-all${NC}          # ê¸°ì¡´ ìŠ¤í¬ë¦½íŠ¸"
echo ""

if [[ "$FORCE" == true ]]; then
    log_warning "ê°•ì œ ì¢…ë£Œê°€ ì‚¬ìš©ë˜ì—ˆìŠµë‹ˆë‹¤."
fi

# ì¢…ë£Œ ì½”ë“œ ë°˜í™˜
if [[ "$all_stopped" == true ]]; then
    exit 0
else
    exit 1
fi

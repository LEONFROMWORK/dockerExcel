repos:
  # General file checks
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.5.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
      - id: check-added-large-files
        args: ['--maxkb=1000']
      - id: check-json
      - id: check-merge-conflict
      - id: mixed-line-ending
        args: ['--fix=lf']

  # Python specific
  - repo: https://github.com/psf/black
    rev: 24.3.0
    hooks:
      - id: black
        language_version: python3
        files: ^python-service/

  - repo: https://github.com/pycqa/autoflake
    rev: v2.3.1
    hooks:
      - id: autoflake
        args: [
          '--in-place',
          '--remove-all-unused-imports',
          '--remove-unused-variables',
          '--expand-star-imports',
          '--ignore-init-module-imports'
        ]
        files: ^python-service/

  - repo: https://github.com/pycqa/flake8
    rev: 7.0.0
    hooks:
      - id: flake8
        args: [
          '--max-line-length=120',
          '--ignore=E203,W503,E501',
          '--exclude=migrations,venv,__pycache__'
        ]
        files: ^python-service/

  # JavaScript/Vue specific
  - repo: local
    hooks:
      - id: eslint
        name: ESLint
        entry: bash -c 'cd rails-app && npx eslint --fix'
        language: system
        files: \.(js|vue|ts)$
        types: [file]
        pass_filenames: true

  # Ruby specific
  - repo: local
    hooks:
      - id: rubocop
        name: Rubocop
        entry: bash -c 'cd rails-app && bundle exec rubocop -a'
        language: system
        files: \.rb$
        types: [file]
        pass_filenames: true

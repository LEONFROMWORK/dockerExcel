# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database
POSTGRES_USER=excel_unified
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=excel_unified_production

# Rails
RAILS_MASTER_KEY=your-master-key-from-config/master.key
SECRET_KEY_BASE=your-generated-secret-key-base

# Performance (최적화된 설정)
WEB_CONCURRENCY=4
RAILS_MAX_THREADS=16
RAILS_MIN_THREADS=4
PUMA_WORKERS=4
PUMA_MAX_THREADS=16
PUMA_MIN_THREADS=4

# OAuth (Google)
GOOGLE_OAUTH2_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-oauth-client-secret

# AI Services
OPENROUTER_API_KEY=your-openrouter-api-key
OPENAI_API_KEY=your-openai-api-key

# Security & Monitoring
LOG_LEVEL=info
RAILS_LOG_TO_STDOUT=true
ENABLE_METRICS=true
GRAFANA_PASSWORD=your-secure-grafana-password

# SSL/TLS (HTTPS 사용 시)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Redis 최적화
REDIS_MAX_MEMORY=384mb
REDIS_MAX_CLIENTS=1000

# PostgreSQL 최적화  
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB

# 캐시 설정
CACHE_EXPIRES_IN=3600
STATIC_CACHE_EXPIRES_IN=31536000
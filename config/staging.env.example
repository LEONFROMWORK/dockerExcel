# Staging environment configuration
# Copy this file to staging.env and fill in the actual values

# Rails Configuration
RAILS_ENV=staging
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
RAILS_MASTER_KEY=your_rails_master_key_here

# Python Service Configuration  
ENVIRONMENT=staging
PYTHONUNBUFFERED=1

# Database Configuration
DATABASE_HOST=postgres-service
DATABASE_PORT=5432
DATABASE_NAME=excel_unified_staging
DATABASE_USER=excel_user

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=1

# Service URLs
PYTHON_SERVICE_URL=http://fastapi-service:8000
RAILS_SERVICE_URL=http://rails-service:3000

# OpenAI Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Application Settings
MAX_UPLOAD_SIZE=50M
WORKER_PROCESSES=2
WORKER_TIMEOUT=120
MAX_CONCURRENT_REQUESTS=50

# Cache Settings
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=43200

# WebSocket Settings
WS_RECONNECT_ATTEMPTS=3
WS_RECONNECT_DELAY=1000
WS_MAX_RECONNECT_DELAY=15000

# Error Detection Settings
ERROR_DETECTION_BATCH_SIZE=5
ERROR_DETECTION_TIMEOUT=300
AUTO_FIX_ENABLED=true

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_LOGGING=true
LOG_LEVEL=debug

# Feature Flags
ENABLE_VBA_ANALYSIS=true
ENABLE_OCR=true
ENABLE_AI_CHAT=true
ENABLE_COMPARISON=true
ENABLE_FORMULA_ANALYSIS=true

# Rate Limiting
API_RATE_LIMIT=20/second
UPLOAD_RATE_LIMIT=5/second
WEBSOCKET_RATE_LIMIT=200/minute

# Security
CORS_ALLOWED_ORIGINS=https://staging.excel-unified.com,https://api-staging.excel-unified.com
SESSION_TIMEOUT=3600
JWT_EXPIRATION=86400
# Docker Development Environment Variables

# Database
DATABASE_URL=postgresql://excel_unified:excel_unified_password@postgres:5432/excel_unified_development
POSTGRES_USER=excel_unified
POSTGRES_PASSWORD=excel_unified_password
POSTGRES_DB=excel_unified_development

# Redis
REDIS_URL=redis://redis:6379/0

# Python Service
PYTHON_SERVICE_URL=http://python:8000

# Rails
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
SECRET_KEY_BASE=development_secret_key_base_at_least_30_characters_long
RAILS_MASTER_KEY=development_master_key_for_testing

# API Keys (replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Google OAuth (for development)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# App URL
APP_URL=http://localhost:3000

# Free Test Period
FREE_TEST_PERIOD_ENABLED=true
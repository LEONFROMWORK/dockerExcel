# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Rails API Configuration
RAILS_API_URL=http://localhost:3000
RAILS_API_KEY=your-rails-api-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/excel_unified_development

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3036"]

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=[".xlsx", ".xls", ".csv"]

# AI Processing
MAX_TOKENS=4000
TEMPERATURE=0.7
CHUNK_SIZE=1000
OVERLAP_SIZE=200

# 2-Tier OCR System Configuration
# Tier 2: PaddleOCR Configuration
PADDLE_USE_GPU=true
PADDLE_DEFAULT_LANG=korean
PADDLE_LOG_LEVEL=ERROR

# Tier 3: OpenAI Vision (uses existing OPENAI_API_KEY above)
OPENAI_VISION_MODEL=gpt-4-vision-preview
OPENAI_VISION_MAX_TOKENS=2000
OPENAI_VISION_TEMPERATURE=0.1

# OCR Processing Limits
OCR_MAX_IMAGE_SIZE=10485760  # 10MB
OCR_TIMEOUT_SECONDS=30
OCR_BATCH_SIZE=5
OCR_CACHE_TTL_SECONDS=3600  # 1 hour
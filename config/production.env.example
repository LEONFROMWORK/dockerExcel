# Production environment configuration
# Copy this file to production.env and fill in the actual values

# Rails Configuration
RAILS_ENV=production
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
RAILS_MASTER_KEY=your_rails_master_key_here

# Python Service Configuration  
ENVIRONMENT=production
PYTHONUNBUFFERED=1

# Database Configuration
DATABASE_HOST=postgres-service
DATABASE_PORT=5432
DATABASE_NAME=excel_unified
DATABASE_USER=excel_user

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0

# Service URLs
PYTHON_SERVICE_URL=http://fastapi-service:8000
RAILS_SERVICE_URL=http://rails-service:3000

# OpenAI Configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Application Settings
MAX_UPLOAD_SIZE=100M
WORKER_PROCESSES=4
WORKER_TIMEOUT=120
MAX_CONCURRENT_REQUESTS=100

# Cache Settings
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# WebSocket Settings
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=1000
WS_MAX_RECONNECT_DELAY=30000

# Error Detection Settings
ERROR_DETECTION_BATCH_SIZE=10
ERROR_DETECTION_TIMEOUT=300
AUTO_FIX_ENABLED=true

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_LOGGING=true
LOG_LEVEL=info

# Feature Flags
ENABLE_VBA_ANALYSIS=true
ENABLE_OCR=true
ENABLE_AI_CHAT=true
ENABLE_COMPARISON=true
ENABLE_FORMULA_ANALYSIS=true

# Rate Limiting
API_RATE_LIMIT=10/second
UPLOAD_RATE_LIMIT=2/second
WEBSOCKET_RATE_LIMIT=100/minute

# Security
CORS_ALLOWED_ORIGINS=https://excel-unified.com,https://api.excel-unified.com
SESSION_TIMEOUT=3600
JWT_EXPIRATION=86400
# Development environment configuration
# Copy this file to development.env and fill in the actual values

# Rails Configuration
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=false

# Python Service Configuration  
ENVIRONMENT=development
PYTHONUNBUFFERED=1

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=excel_unified_development
DATABASE_USER=excel_user

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Service URLs
PYTHON_SERVICE_URL=http://localhost:8000
RAILS_SERVICE_URL=http://localhost:3000

# OpenAI Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Application Settings
MAX_UPLOAD_SIZE=100M
WORKER_PROCESSES=1
WORKER_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=10

# Cache Settings
CACHE_TTL_SHORT=60
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=3600

# WebSocket Settings
WS_RECONNECT_ATTEMPTS=10
WS_RECONNECT_DELAY=500
WS_MAX_RECONNECT_DELAY=5000

# Error Detection Settings
ERROR_DETECTION_BATCH_SIZE=5
ERROR_DETECTION_TIMEOUT=600
AUTO_FIX_ENABLED=true

# Monitoring
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090
ENABLE_LOGGING=true
LOG_LEVEL=debug

# Feature Flags
ENABLE_VBA_ANALYSIS=true
ENABLE_OCR=true
ENABLE_AI_CHAT=true
ENABLE_COMPARISON=true
ENABLE_FORMULA_ANALYSIS=true

# Rate Limiting
API_RATE_LIMIT=100/second
UPLOAD_RATE_LIMIT=10/second
WEBSOCKET_RATE_LIMIT=1000/minute

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
SESSION_TIMEOUT=7200
JWT_EXPIRATION=86400